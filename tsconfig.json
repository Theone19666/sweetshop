{
    "compilerOptions": {
      "target": "esnext",
      "module": "system",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outFile": "./public/index.js",
      "sourceMap": true,
      "strict": true,
      "jsx": "preserve",
      "moduleResolution": "node"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
    }